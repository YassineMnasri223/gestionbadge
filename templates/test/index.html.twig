{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block body %}
    <h1>Test index</h1>
    {{ form_start(searchForm) }}
    <div class="input-group mb-3">
        {{ form_widget(searchForm.q) }}
{{ form_end(searchForm) }}


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.id }}</td>
                <td>{{ test.name }}</td>
                <td>{{ test.type }}</td>
                <td>
                    <a href="{{ path('app_test_show', {'id': test.id}) }}">show</a>
                    <a href="{{ path('app_test_edit', {'id': test.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_test_new') }}">Create new</a>
{% endblock %}
