{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block body %}
    <h1>les test disponibles</h1>
    <input type="text" id="search" class="form-control" placeholder="Search">
    <br>
    <div id="resultats_container" >
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for test in tests %}
                    <tr>
                        <td>{{ test.name }}</td>
                        <td>{{ test.type }}</td>
                        <td>
                            <a href="{{ path('app_passtest', {'id': test.id}) }}">Passer ce test</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    <script src="{{ asset('https://code.jquery.com/jquery-3.5.1.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $("#search").keyup(function (e) {
                var value = $(this).val();
                $.ajax({
                    url: "{{ path('recherche_ajax_test') }}",
                    type: "GET",
                    data: {
                        searchValue: value
                    },
                    success: function (response) {
                        var resultatsContainer = $('#resultats_container');
                        resultatsContainer.empty();
                        if (response.length === 0) {
                            resultatsContainer.append('<p>No results found.</p>');
                        } else {
                            var table = '<table class="table"><thead><tr><th>Name</th><th>Type</th><th>Actions</th></tr></thead><tbody>';
                            $.each(response, function (key, value) {
                                var url = "{{ path('app_passtest', {'id': '__id__'}) }}".replace('__id__', value.id);
                                table += '<tr><td>' + value.name + '</td><td>' + value.type + '</td><td><a href="' + url + '">Passer ce test</a></td></tr>';
                            });
                            table += '</tbody></table>';
                            resultatsContainer.append(table);
                        }
                    },
                    error: function () {
                        console.log('An error occurred while processing the request.');
                    }
                });
            });
        });
    </script>
{% endblock %}
